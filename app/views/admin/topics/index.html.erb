
<h1>主题管理</h1>
<table id="topics" class="display">
	<thead>
		<tr>
        	<td>ID</td>
        	<td>名称</td>
        	<td></td>
        	<td></td>
        	<td></td>
      	</tr>
    </thead>
    <tbody>
    	<% topics.each do |topic|%>
      	<tr>
	        <td><%= topic.id %></td>
	        <td><%= topic.name %></td>
	        <td><%= link_to "显示", admin_topic_path(topic) %></td>
	        <td><%= link_to "修改", edit_admin_topic_path(topic) %></td>
	        <td><%= link_to "删除", admin_topic_path(topic), method: :delete %></td>
	      </tr>
	    <% end %>
	</tbody>

</table>
<%= content_for :add do %>
	<%= link_to "添加", new_admin_topic_path %>
<% end %>