
<h1>分类管理</h1>
<table id="categories" class="display">
	<thead>
		<tr>
        	<td>ID</td>
        	<td>名称</td>
        	<td></td>
        	<td></td>
        	<td></td>
      	</tr>
    	</thead>
    	<tbody>
    	<% categories.each do |category|%>
      	<tr>
	        <td><%= category.id %></td>
	        <td><%= category.name %></td>
	        <td><%= link_to "显示", admin_category_path(category) %></td>
	        <td><%= link_to "修改", edit_admin_category_path(category) %></td>
	        <td><%= link_to "删除", admin_category_path(category), method: :delete %></td>
	      </tr>
	    <% end %>
	    </tbody>

</table>

<%= content_for :add do %>
	<%= link_to "添加", new_admin_category_path %>
<% end %>